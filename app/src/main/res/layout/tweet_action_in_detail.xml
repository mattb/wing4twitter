<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandable"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_below="@+id/main_card_content"
    android:background="@drawable/card_action_drawer_inverse"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:id="@+id/expand_action_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/ic_delete_light" />

    <include layout="@layout/divider_vertical"
        android:layout_width="3px"
        android:layout_marginLeft="-4px"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/expand_action_reply"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_reply_light" />

    <include layout="@layout/divider_vertical" />

    <ImageView
        android:id="@+id/expand_action_retweet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_retweet_light" />

    <include layout="@layout/divider_vertical" />

    <ImageView
        android:id="@+id/expand_action_favorite"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_favorite_light" />

    <include layout="@layout/divider_vertical" />

    <ImageView
        android:id="@+id/expand_action_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_share_light" />

</LinearLayout>

