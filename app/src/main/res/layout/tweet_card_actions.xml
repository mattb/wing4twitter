<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandable"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/stroke_dark"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/expand_action_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/expand_action_row_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/expand_action_reply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_reply"
                    android:theme="@android:style/Theme.Material" />

                <ImageView
                    android:id="@+id/expand_action_retweet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_retweet_new"
                    android:theme="@android:style/Theme.Material" />

                <ImageView
                    android:id="@+id/expand_action_favorite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_favorite"
                    android:theme="@android:style/Theme.Material" />

                <ImageView
                    android:id="@+id/expand_action_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_show_detail"
                    android:theme="@android:style/Theme.Material" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expand_action_row_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/expand_action_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_delete"
                    android:visibility="invisible"
                    android:theme="@android:style/Theme.Material" />

                <ImageView
                    android:id="@+id/expand_action_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_filter"
                    android:theme="@android:style/Theme.Material" />

                <ImageView
                    android:id="@+id/expand_action_copy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_copy"
                    android:theme="@android:style/Theme.Material" />

                <ImageView
                    android:id="@+id/expand_action_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_share"
                    android:theme="@android:style/Theme.Material" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:gravity="center_vertical|right">

        <include layout="@layout/divider_vertical" />

        <ImageView
            android:id="@+id/expand_action_more"
            android:theme="@android:style/Theme.Material"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_more"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"/>

    </LinearLayout>


</LinearLayout>