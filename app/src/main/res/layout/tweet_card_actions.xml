<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandable"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/card_drawer_bg"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:id="@+id/expand_action_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete"
        android:visibility="gone" />

    <include
        layout="@layout/divider_vertical"
        android:layout_width="3px"
        android:layout_height="20dp"
        android:layout_marginLeft="-4px" />

    <ImageView
        android:id="@+id/expand_action_reply"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_reply" />

    <include layout="@layout/divider_vertical" />

    <ImageView
        android:id="@+id/expand_action_retweet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_retweet" />

    <include layout="@layout/divider_vertical" />

    <ImageView
        android:id="@+id/expand_action_favorite"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_favorite" />

    <include layout="@layout/divider_vertical" />

    <ImageView
        android:id="@+id/expand_action_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_share" />

</LinearLayout>

