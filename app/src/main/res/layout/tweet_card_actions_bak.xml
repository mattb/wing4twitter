<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandable"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/card_drawer_bg"
    android:visibility="visible">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/expand_action_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/expand_action_reply"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_reply"
                android:theme="@android:style/Theme.Material" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:id="@+id/expand_action_retweet"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_retweet"
                android:theme="@android:style/Theme.Material" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:id="@+id/expand_action_favorite"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_favorite"
                android:theme="@android:style/Theme.Material" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:id="@+id/expand_action_detail"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_show_detail"
                android:theme="@android:style/Theme.Material" />

            <include layout="@layout/divider_vertical" />


            <ImageView
                android:id="@+id/expand_action_copy"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_copy"
                android:theme="@android:style/Theme.Material" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:id="@+id/expand_action_share"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_share"
                android:theme="@android:style/Theme.Material" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:id="@+id/expand_action_delete"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_delete"
                android:theme="@android:style/Theme.Material"
                android:visibility="gone" />

            <include layout="@layout/divider_vertical" />

            <ImageView
                android:id="@+id/expand_action_filter"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_filter"
                android:theme="@android:style/Theme.Material" />

        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:id="@+id/expand_action_row_2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center_vertical|left"-->
        <!--android:orientation="horizontal"-->
        <!--android:visibility="gone">-->

        <!--</LinearLayout>-->
    </HorizontalScrollView>

</LinearLayout>
